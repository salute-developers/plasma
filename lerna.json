{
    "packages": ["packages/*", "utils/*", "website/*", "actions/*"],
    "version": "independent",
    "ignoreChanges": ["*.md", "*.component-test.tsx", "package-lock.json"],
    "loglevel": "verbose",
    "exact": true,
    "command": {
        "bootstrap": {
            "npmClientArgs": [
                "--no-audit",
                "--no-optional",
                "--loglevel error",
                "--no-progress",
                "--unsafe-perm",
                "--prefer-offline"
            ]
        },
        "publish": {
            "verifyAccess": false
        }
    },
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}

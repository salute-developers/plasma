{
    "packages": [
        "packages/*",
        "packages/themes/*",
        "utils/*",
        "website/*",
        "actions/platform-test",
        "plasma-playwright"
    ],
    "version": "independent",
    "ignoreChanges": ["*.md", "*.component-test.tsx", "*.spec.tsx", "component.export.ts", "package-lock.json"],
    "loglevel": "verbose",
    "exact": true,
    "command": {
        "bootstrap": {
            "npmClientArgs": ["--no-audit", "--no-optional", "--loglevel error", "--no-progress", "--unsafe-perm"]
        },
        "publish": {
            "verifyAccess": false
        },
        "list": {
            "ignoreChanges": ["*.md", "package-lock.json"]
        }
    },
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}

{
    "packages": [
        "packages/*",
        "packages/themes/*",
        "utils/*",
        "website/*-docs",
        "website/plasma-website",
        "actions/platform-test"
    ],
    "version": "independent",
    "ignoreChanges": ["*.md", "*.component-test.tsx", "package-lock.json", "packages/sdds-clfd-auto/**"],
    "loglevel": "verbose",
    "exact": true,
    "command": {
        "bootstrap": {
            "npmClientArgs": ["--no-audit", "--no-optional", "--loglevel error", "--no-progress", "--unsafe-perm"],
            "ignore": "@salutejs/sdds-clfd-auto"
        },
        "publish": {
            "verifyAccess": false
        },
        "list": {
            "ignoreChanges": ["*.md", "package-lock.json"]
        }
    },
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}

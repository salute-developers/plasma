{
    "minify": false,
    "jsc": {
        "target": "es5",
        "parser": {
            "syntax": "typescript"
        },
        "baseUrl": "../../.",
        "paths": {
            "src/*": ["./src-sc/*"]
        },
        "experimental": {
            "plugins": [
                [
                    "@swc/plugin-styled-components",
                    {
                        "displayName": true,
                        "ssr": true
                    }
                ]
            ]
        }
    },
    "exclude": [".*\\.stories.tsx$", ".*\\.component-test.tsx$"]
}
